{{#> page-header-tools}}
  {{#> page-header-tools-group page-header-tools-group--modifier="pf-m-icons"}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Unread notifications"'}}
        {{#> notification-badge notification-badge--modifier="pf-m-unread"}}
          <i class="fas fa-bell" aria-hidden="true"></i>
        {{/notification-badge}}
    {{/button}}
    {{#> button button--modifier="pf-m-plain pf-m-hidden pf-m-visible-on-lg" button--attribute='aria-label="Settings"'}}
        <i class="fas fa-cog" aria-hidden="true"></i>
    {{/button}}
    {{#> dropdown dropdown--modifier="pf-m-hidden-on-lg" id=(concat page--id '-dropdown-kebab-right-aligned-1') dropdown--IsActionMenu="true" dropdown-menu--modifier="pf-m-align-right" dropdown-toggle--modifier="pf-m-plain" dropdown--HasKebabIcon="true" aria-label="Actions"}}
    {{/dropdown}}
  {{/page-header-tools-group}}
  {{#> page-header-tools-group page-header-tools-group--modifier="pf-m-hidden pf-m-visible-on-lg"}}
    {{#> dropdown id=(concat page--id '-dropdown') dropdown-toggle--modifier="pf-m-plain" dropdown--HasToggleIcon="true"}}
      {{#> dropdown-toggle-text}}
        John Smith
      {{/dropdown-toggle-text}}
    {{/dropdown}}
  {{/page-header-tools-group}}
  {{#> avatar avatar--modifier="pf-m-hidden pf-m-visible-on-sm" avatar--attribute='src="/assets/images/img_avatar.svg" alt="Avatar image"'}}{{/avatar}}
{{/page-header-tools}}
