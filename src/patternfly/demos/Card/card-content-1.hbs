{{#> card-header}}
  {{#> l-flex flex--modifier="pf-m-align-center"}}
    {{#> l-flex flex--modifier="pf-m-grow"}}
      {{#> brand brand--attribute='src="/assets/images/pf-logo-small.svg" alt="Logo"'}} 
      {{/brand}}
    {{/l-flex}}
    {{#> flex-item flex-item--modifier="pf-u-mr-0"}}
      {{#> dropdown id=(concat card--id "-dropdown-kebab-right-aligned") dropdown--IsActionMenu="true" dropdown-toggle--modifier="pf-m-plain" dropdown--HasKebabIcon="true" aria-label="Actions"}}
      {{/dropdown}}
    {{/flex-item}}
    <input type="checkbox" id="{{card--id}}-check" name="{{card--id}}-check" aria-labelledby="{{card--id}}-check-label">
  {{/l-flex}}
{{/card-header}}
{{#> card-body}}
  {{#> l-flex flex--modifier="pf-m-column"}}
    <p style="font-size:18px" id="{{concat card--id "-check-label"}}">Patternfly</p>
    <p style="font-size:14px;color:#8B8D8F;">Provided by Red Hat</p>
    {{#> flex-item flex-item--modifier="pf-u-mt-md"}}
      <p style="font-size:14px">PatternFly is a community project that promotes design commonality and improves user experience.</p>
    {{/flex-item}}
  {{/l-flex}}
{{/card-body}}
