{{#> toolbar pf-l-toolbar--modifier="pf-u-justify-content-space-between pf-u-mx-xl pf-u-my-md"}}
  {{#> toolbar-group}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-mr-2xl"}}
      {{#> input-group}}
        {{#> dropdown id="dropdown-example-collapsed"}}
          All
          <i class="fas fa-caret-down pf-c-dropdown__toggle-icon"></i> 
        {{/dropdown}}
        {{#> input-group-action input-group-action--modifier="pf-m-align-right" inputGroupTextType="button" aria-label="popover for input"}}
          <i class="fas fa-search aria-hidden="true"></i>
        {{/input-group-action}}
        {{#> form-controls controlType="input" input="true" type="text" id="textInput10" name="textInput10" placeholder="Filter..." aria-label="standard input example" }}
        {{/form-controls}}
      {{/input-group}}
    {{/toolbar-item}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-mr-lg"}}
      {{#> dropdown id="dropdown-example-collapsed" pf-c-dropdown--HasToggleIcon="true"}}
        All
      {{/dropdown}}
    {{/toolbar-item}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-m-sm"}}
      <a class="pf-m-link"><i class="fas fa-sort-alpha-down"></i></a>
    {{/toolbar-item}}
  {{/toolbar-group}}
  {{#> toolbar-group}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-m-sm"}}
      <a class="pf-m-link"><i class="fas fa-list"></i></a>
    {{/toolbar-item}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-m-sm"}}
      <a class="pf-m-link"><i class="fas fa-table"></i></a>
    {{/toolbar-item}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-my-sm pf-u-mx-lg"}}
       <a class="pf-m-link">Action</a>
    {{/toolbar-item}}
    {{#> toolbar-item pf-l-toolbar__item--modifier="pf-u-my-xs pf-u-mr-md"}}
      {{#> button btnClass="pf-m-primary"}}
        Action
      {{/button}}
    {{/toolbar-item}}
    {{#> toolbar-item}}
      {{#> dropdown id="dropdown-example-kebab" pf-c-dropdown--Modifier="pf-m-plain"}}
        <i class="fas fa-ellipsis-v"></i>
      {{/dropdown}}
    {{/toolbar-item}}
  {{/toolbar-group}}
{{/toolbar}}
