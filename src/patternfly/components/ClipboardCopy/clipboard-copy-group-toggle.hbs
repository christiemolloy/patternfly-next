<button class="pf-c-clipboard-copy__group-toggle{{#if clipboard-copy-group-toggle--modifier}} {{clipboard-copy-group-toggle--modifier}}{{/if}}"
  {{#if clipboard-copy-group-toggle--attribute}}
    {{{clipboard-copy-group-toggle--attribute}}}
  {{/if}}
  {{#if clipboard-copy--IsExpanded}}
    aria-label="Show Less"
    aria-expanded="true"
  {{else}}
    aria-label="Show More"
    aria-expanded="false"
  {{/if}}
  >
  {{> @partial-block}}
    <i class="fas fa-angle-right pf-c-clipboard-copy__group-toggle-icon" aria-hidden="true"></i>
</button>
