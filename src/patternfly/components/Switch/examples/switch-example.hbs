{{#> switch switch--attribute='for="on"'}}
  {{#> switch-input id="on" switch-input--attribute='type="checkbox" id="on" checked'}}{{/switch-input}}
  {{#> switch-toggle}}{{/switch-toggle}}
  {{#> switch-label-on switch-label-on--attribute='aria-hidden="true"'}}
  {{/switch-label-on}}
  {{#> switch-label-off switch-label-off--attribute='aria-hidden="true"'}}
  {{/switch-label-off}}
{{/switch}}
<br/>
<br/>
{{#> switch switch--attribute='for="off"'}}
  {{#> switch-input id="off" switch-input--attribute='type="checkbox" id="off"'}}{{/switch-input}}
  {{#> switch-toggle}}{{/switch-toggle}}
  {{#> switch-label-on switch-label-on--attribute='aria-hidden="true"'}}
  {{/switch-label-on}}
  {{#> switch-label-off switch-label-off--attribute='aria-hidden="true"'}}
  {{/switch-label-off}}
{{/switch}}
