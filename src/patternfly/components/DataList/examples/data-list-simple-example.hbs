{{#> data-list data-list--attribute='aria-label="Simple data list example"'}}
  {{#> data-list-item data-list-item--attribute='aria-labelledby="simple-item1"'}}
    {{#> data-list-item-row}}
      {{#> data-list-item-content}}
        {{#> data-list-cell}}
          <span id="simple-item1">Primary content</span>
        {{/data-list-cell}}
        {{#> data-list-cell}}
          Secondary content
        {{/data-list-cell}}
      {{/data-list-item-content}}
    {{/data-list-item-row}}
  {{/data-list-item}}

  {{#> data-list-item data-list-item--attribute='aria-labelledby="simple-item2"'}}
    {{#> data-list-item-row}}
      {{#> data-list-item-content}}
        {{#> data-list-cell data-list-cell--modifier="pf-m-align-left"}}
          <span id="simple-item2">Secondary content that shrinks to the beginning</span>
        {{/data-list-cell}}
        {{#> data-list-cell data-list-cell--modifier="pf-m-align-right"}}
          Secondary content that shrinks to the end
        {{/data-list-cell}}
      {{/data-list-item-content}}
    {{/data-list-item-row}}
  {{/data-list-item}}
{{/data-list}}
