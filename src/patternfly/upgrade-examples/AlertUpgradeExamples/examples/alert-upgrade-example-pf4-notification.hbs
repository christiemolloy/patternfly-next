{{#> alert-upgrade-examples}}
  {{#> alert alert--modifier="pf-m-success" alert--attribute='aria-label="Success Notification"'}}
    {{#> alert-icon alert-icon--success="true"}}
    {{/alert-icon}}
    {{#> alert-body alert-body--attribute='role="alert"'}}
      {{#> alert-description}}
        The server configuration changed.
      {{/alert-description}}
    {{/alert-body}}
    {{#> alert-action}}
      {{#> button btnClass="pf-m-plain" btnAttributes='aria-label="Remove"'}}
          <i class="fas fa-times"></i> 
      {{/button}}
      {{/alert-action}}
  {{/alert}}
<br>
{{#> alert alert--modifier="pf-m-danger" alert--attribute='aria-label="Danger Notification"'}}
  {{#> alert-icon alert-icon--danger="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-description}}
			Failed to add server_abc.
		{{/alert-description}}
  {{/alert-body}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-warning" alert--attribute='aria-label="Warning Notification"'}}
  {{#> alert-icon alert-icon--warning="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-description}}
			The server configuration changed. 
		{{/alert-description}}
  {{/alert-body}}
  {{#> alert-action}}
    {{#> button btnClass="pf-m-link"}}
      Reload server
    {{/button}}
    {{#> button btnClass="pf-m-plain" btnAttributes='aria-label="Remove"'}}
      <i class="fas fa-times"></i>
    {{/button}}
  {{/alert-action}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-info" alert--attribute='aria-label="Information Notification"'}}
  {{#> alert-icon alert-icon--info="true"}}
  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-description}}
			Great job! This is really working out.
		{{/alert-description}}
  {{/alert-body}}
  {{#> alert-action}}
    {{#> button btnClass="pf-m-link"}}
      Reload server
    {{/button}}
		{{#> button btnClass="pf-m-plain" btnAttributes='aria-label="Remove"'}}
				<i class="fas fa-ellipsis-v"></i> 
		{{/button}}
  {{/alert-action}}
{{/alert}}
